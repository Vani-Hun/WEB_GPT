<%- include('../common/head.ejs', {title: "GPT Group | About Us", content: "Information of GPT Group", keyword: "GPT, GPT Group"})  %>
    <%- include('../common/header/header.ejs', contact) %>
    <main id="main">
        <h1 class="img-contact">
            GPT GROUP / CAREER
        </h1>
        <div class="career-body">
            <div class="lst-job">
                <h2>ACTIVE JOBS</h2>
                <% for(const career of careers) { %>
                    <div class="jd-card">
                        <div class="jd-col">
                            <p class="title-h4"><a href="/career/<%= career.id %> "><%= career.position.toUpperCase() %></a></p>
                            <p class="desc-job">Department: <%= career.department.name.toUpperCase() %> </p>
                            <p class="desc-job">Deadline: <%= career.expired.toDateString() %> </p>
                        </div>
                        <div class="btn-col">
                            <a href="/career/<%= career.id %> ">APPLY NOW</a> 
                        </div>
                    </div>
                <% } %> 
            </div>
            <div class="career-info">
                <div class="career-form">
                    <form action="/career" method="post" enctype="multipart/form-data">
                        <h2>APPLICANT FORM</h2>
                        <input placeholder="Your full name: Nguyễn Văn A" type="text" name="name" required>
                        <div id="email-error" class="error-message"></div>
                        <input placeholder="Email: nguyenvana@gmail.com" type="email" name="email" required>
                        <div id="phone-error" class="error-message"></div>
                        <input placeholder="Phone number: 0909090909" type="text" name="phone" required>
                        <input type="text" name="position" placeholder="Position" required>
                        <div id="cic-error" class="error-message"></div>
                        <input type="text" name="card" placeholder="Citizen Identity Card" required>
                        <input type="date" name="birth" placeholder="Date of birth" required>
                        <div id="file-error" class="error-message"></div>
                        <button type="button" class="btn-upload" id="cv">
                            <i class="fa fa-upload"></i> Upload Your CV (only .pdf or .docx)
                            <input type="file" name="cv" accept=".pdf,.doc,.docx" required>
                        </button >
                        <input id="btnSubmit" class="btn-cta" type="submit" value="Submit">
                    </form>
                </div>
            </div>            
        </div>
    </main>
    <%- include('../common/footer/footer.ejs', contact) %>
<%- include('../common/tail.ejs') %>
<script>
    const error = '<%= error %>'
    if(error.length > 0){
        alert(error)
    }
</script>
<script src="/javascript/validated.js"></script>