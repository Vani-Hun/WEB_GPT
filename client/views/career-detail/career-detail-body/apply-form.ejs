<form action="/career" method="post" enctype="multipart/form-data">
    <h2>APPLICANT FORM</h2>
    <input placeholder="Your full name: Nguyễn Văn A" type="text" name="name" required>
    <div id="email-error" class="error-message"></div>
    <input placeholder="Email: nguyenvana@gmail.com" type="email" name="email" required>
    <div id="phone-error" class="error-message"></div>
    <input placeholder="Phone number: 0909090909" type="text" name="phone" required>
    <input type="text" name="position" placeholder="Position" value="<%= career.position %>" required>
    <div id="cic-error" class="error-message"></div>
    <input type="text" name="card" placeholder="Citizen Identity Card" value="<%= career.card %>" required>
    <input type="date" name="birth" placeholder="Date of birth" value="<%= career.birth %>" required>
    <div id="file-error" class="error-message"></div>
    <button type="button" class="btn-upload" id="cv">
        <i class="fa fa-upload"></i> Upload Your CV (only .pdf or .docx)
        <input type="file" name="cv" accept=".pdf,.doc,.docx" required>
    </button>
    <input type="hidden" name="careerID" value="<%= career.id %> ">
    <input id="btnSubmit" class="btn-cta" type="submit" value="Submit">
</form>